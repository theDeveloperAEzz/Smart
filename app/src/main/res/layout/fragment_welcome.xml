<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:tools2="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
  >

    <android.support.v7.widget.CardView
        android:id="@+id/login_card"
        style="@style/SelectableItemTheme"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_margin="5dp"
        android:clickable="true"
        app:cardBackgroundColor="@android:color/transparent"
        app:cardElevation="4dp"
        tools:ignore="KeyboardInaccessibleWidget,ObsoleteLayoutParam">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/welcome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:text="Welcome "
                android:textColor="#000"
                android:textSize="40dp" />

            <TextView
                android:id="@+id/txt_summary0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/welcome"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:padding="8dp"
                android:text="Smart"
                android:textColor="#000"
                android:textSize="28dp"
                tools2:ignore="HardcodedText,SpUsage" />

            <TextView
                android:id="@+id/txt_summary1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/txt_summary0"
                android:layout_marginLeft="-15dp"
                android:layout_toRightOf="@+id/txt_summary0"
                android:gravity="center"
                android:padding="8dp"
                android:text=".task"
                android:textColor="#000"
                android:textSize="12dp"
                tools:ignore="RtlCompat" />


            <Button
                android:id="@+id/signUp"
                style="@android:style/Widget.Button.Inset"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:background="@drawable/btn_bg"
                android:layout_margin="8dp"
                android:layout_marginBottom="10dp"
                android:text="sign-up"
                android:textColor="#fff"
                android:textSize="15dp"
                tools:ignore="RtlCompat" />

            <Button
                android:id="@+id/signIn"
                style="@android:style/Widget.Button.Inset"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:background="@drawable/btn_bg"
                android:layout_margin="8dp"
                android:layout_marginBottom="10dp"
                android:text="login"
                android:textColor="#fff"
                android:textSize="15dp"
                tools:ignore="RtlCompat" />


        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>


