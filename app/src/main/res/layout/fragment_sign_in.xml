<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:facebook="https://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:ignore="NamespaceTypo">

    <android.support.v7.widget.CardView
        android:id="@+id/login_card"
        style="@style/SelectableItemTheme"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_margin="5dp"
        android:clickable="true"
        app:cardBackgroundColor="@android:color/transparent"
        app:cardElevation="4dp"
        tools:ignore="KeyboardInaccessibleWidget,ObsoleteLayoutParam">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center|center_horizontal"
                    android:layout_marginTop="10dp"
                    android:text="Sign In"
                    android:textColor="@color/black"
                    android:textSize="28dp" />



                <EditText
                    android:id="@+id/et_email_log"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="15dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="20dp"
                    android:inputType="textEmailAddress"
                    android:gravity="start"
                    android:hint="email"
                    android:padding="8dp"
                    android:textSize="18dp" />

                <EditText
                    android:id="@+id/et_password_log"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="15dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="20dp"
                    android:gravity="start"
                    android:inputType="textPassword"
                    android:hint="password"
                    android:padding="8dp"
                    android:textSize="18dp" />



                <Button
                    android:id="@+id/btn_sign_in"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/btn_bg"
                    android:stateListAnimator="@drawable/statelistanimatorz"
                    android:text="sign-in"
                    android:textAllCaps="false"
                    android:textColor="#fff"
                    tools:ignore="UnusedAttribute" />


            </LinearLayout>


        </ScrollView>
    </android.support.v7.widget.CardView>

</LinearLayout>

